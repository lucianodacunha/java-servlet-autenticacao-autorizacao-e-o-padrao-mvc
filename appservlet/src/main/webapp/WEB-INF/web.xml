<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>io.github.lucianodacunha.appservlet.controller.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>

    <filter>
       <filter-name>ChronoFilter</filter-name>
      <filter-class>io.github.lucianodacunha.appservlet.controller.filter.ChronoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ChronoFilter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ControllerFilter</filter-name>
        <filter-class>io.github.lucianodacunha.appservlet.controller.filter.ControllerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ControllerFilter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>

</web-app>